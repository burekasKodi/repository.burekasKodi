            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests" version="2.9.1" />
        </requires>
        <extension point="xbmc.subtitle.module"
                   library="service.py" />
        <extension point="xbmc.addon.metadata">
            <summary>OpenSubtitles by OpenSubtitles.org</summary>
            <description lang="en">Anonymously search and download subtitles for movies and TV-Series from OpenSubtitles.org without log-in. Search in 75 languages, 4.000.000+ subtitles, daily updates.[CR]For news, updates &amp; more info - Visit: https://bit.ly/3DaU7JT</description>
